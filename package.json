{
  "name": "@mrmoree/rw-components",
  "version": "0.0.1",
  "description": "Rewe Web Components",
  "keywords": [
    "rewe",
    "webcomponents"
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/mrmoree/ReweComponents.git"
  },
  "bugs": {
    "url": "https://github.com/mrmoree/ReweComponents/issues"
  },
  "homepage": "https://github.com/mrmoree/ReweComponents#README",
  "author": "Oliver Kierepka <oliver.kierepka@rewe-digital.de> (https://rewe.de)",
  "license": "MIT",
  "dependencies": {
    "@babel/preset-env": "^7.6.3",
    "@types/react": "^16.9.11",
    "@types/react-dom": "^16.9.3",
    "@webcomponents/webcomponentsjs": "^2.3.0",
    "lit-element": "^2.2.1",
    "react": "^16.11.0",
    "react-dom": "^16.11.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.6.4",
    "@babel/core": "^7.6.4",
    "@babel/preset-react": "^7.6.3",
    "@babel/preset-typescript": "^7.6.0",
    "@types/jest": "^24.0.20",
    "concurrently": "^4.1.0",
    "css-loader": "^2.1.0",
    "del-cli": "^1.1.0",
    "eslint": "^5.14.1",
    "eslint-plugin-security": "^1.4.0",
    "jest": "^24.9.0",
    "lerna": "^3.18.3",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.13.0",
    "sass-loader": "^7.1.0",
    "source-map-loader": "^0.2.4",
    "style-loader": "^0.23.1",
    "stylelint": "^9.10.1",
    "ts-jest": "^24.1.0",
    "tslint": "^5.20.0",
    "typescript": "^3.6.4",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.9",
    "webpack-dev-server": "^3.9.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "build": "lerna run build:ts && lerna run build:js",
    "build:ts": "lerna exec tsc",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "babel ./ --out-dir dist --extensions \".ts,.tsx\" --source-maps inline",
    "bundle": "lerna run webpack",
    "prebuild": "npm run del-dist",
    "del-dist": "lerna exec --parallel -- del-cli dist",
    "test": "jest",
    "postinstall": "lerna bootstrap",
    "bootstrap": "lerna bootstrap",
    "release": "npm run build && lerna publish",
    "devserver": "webpack-dev-server",
    "dev": "npm run watch",
    "watch": "concurrently build:ts build:babel -- test -w",
    "predeploy": "npm build"
  },
  "npmClient": "npm",
  "useWorkspaces": true,
  "workspaces": {
    "packages": [
      "elements/*",
      "themes/*"
    ],
    "nohoist": []
  }
}
