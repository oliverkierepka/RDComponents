{
  "packages": [
    "elements/*",
    "themes/*"
  ],
  "version": "independent",
  "npmClient": "npm",
  "useWorkspaces": true,
  "workspaces": [
    "elements/*",
    "themes/*"
  ],
  "command": {
    "publish": {
      "conventionalCommits": true,
      "message": "chore(release): publish",
      "registry": "https://npm.pkg.github.com",
      "yes": true,
      "ignoreChanges": [
        "ignored-file",
        "*.md"
      ]
    },
    "bootstrap": {
      "ignore": "",
      "npmClientArgs": ["--no-package-lock"]
    }
  }
}


